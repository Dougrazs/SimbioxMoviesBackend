{
  "compilerOptions": {
    "lib": [
      "ES2023", "dom"
    ],
    "outDir": ":dist",
    "module": "node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "jest.config.cjs",
    "dist",
    "**/*.test.ts"
  ]
}
