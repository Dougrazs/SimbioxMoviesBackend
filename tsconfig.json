{
  "compilerOptions": {
    "lib": ["ES2023"],
    "outDir": "./dist",
    "module": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,  
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "jest.config.cjs",
    "dist",
    "**/*.test.ts"
  ]
}
